<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activity.MainActivity"
    android:padding="20dp"
    android:background="@drawable/rounded_background"
    android:layout_gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 标题 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WeKit 需要更新 DEX 缓存"
                android:textColor="@color/firstTextColor"
                android:textSize="23sp"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <!-- 提示文本 -->
            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="检测到部分功能需要更新 DEX 缓存，点击开始适配后将自动扫描并更新。"
                android:textColor="@color/secondTextColor"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp" />

            <!-- 当前任务文本 -->
            <TextView
                android:id="@+id/tv_current_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/secondTextColor"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:visibility="gone" />

            <!-- 主进度条（总任务进度） -->
            <ProgressBar
                android:id="@+id/progress_main"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:max="100"
                android:progress="0" />

            <!-- 主进度文本 -->
            <TextView
                android:id="@+id/tv_progress_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="总进度: 0/0"
                android:textColor="@color/secondTextColor"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:visibility="gone" />

            <!-- 子进度条（当前任务进度） -->
            <ProgressBar
                android:id="@+id/progress_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone" />

            <!-- 错误详情容器 -->
            <LinearLayout
                android:id="@+id/layout_error_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="#FFEBEE"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="❌ 适配失败"
                    android:textColor="#D32F2F"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_error_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#D32F2F"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="monospace" />

                <Button
                    android:id="@+id/btn_copy_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="复制错误信息"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#D32F2F"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- 按钮容器 -->
            <LinearLayout
                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="10dp">

                <Button
                    android:id="@+id/btn_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="开始适配"
                    android:padding="20dp"
                    android:backgroundTint="#00BFA5"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" />


                <Button
                    android:id="@+id/btn_close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="关闭"
                    android:padding="20dp"
                    android:backgroundTint="#DD2C00"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
